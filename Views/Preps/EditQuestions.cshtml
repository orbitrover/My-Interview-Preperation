@model Core.InterviewPrep.PostgreSQL.Models.Questions
@{
    Layout = null;
}
<input type="hidden" id="header" value="Edit Question" />

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditQuestions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedDate" />
            <div class="form-group">
                <label for="HeadingId" class="control-label">Heading Name</label>
                <select asp-for="HeadingId" class="form-control" asp-items="ViewBag.HeadingId"></select>
                <span asp-validation-for="HeadingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionName" class="control-label"></label>
                <textarea asp-for="QuestionName" class="form-control" rows="10" cols="20">

                </textarea>
                <span asp-validation-for="QuestionName" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



