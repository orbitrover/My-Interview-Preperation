@model Core.InterviewPrep.PostgreSQL.Models.ValueTypeMaster

@{
    Layout = null;
}
<input type="hidden" id="header" value="Edit Topic" />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditTopics">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ValueTypeGroupId" class="control-label"></label>
                <select asp-for="ValueTypeGroupId" class="form-control" asp-items="ViewBag.ValueTypeGroupId"></select>
                <span asp-validation-for="ValueTypeGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



